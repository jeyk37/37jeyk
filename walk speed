--[[
 Walk Speed Adjuster GUI (Compact Edition)
 Made by: janrez
]]

local player = game.Players.LocalPlayer
local humanoid = player.Character and player.Character:FindFirstChildOfClass("Humanoid")

player.CharacterAdded:Connect(function(c)
	humanoid = c:WaitForChild("Humanoid")
end)

-- Create GUI
local gui = Instance.new("ScreenGui")
gui.Parent = player:WaitForChild("PlayerGui")
gui.IgnoreGuiInset = true
gui.ResetOnSpawn = false

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 180, 0, 90)
frame.Position = UDim2.new(0.5, -90, 0.5, -45)
frame.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
frame.Active = true
frame.Draggable = true
frame.BorderSizePixel = 0
frame.Visible = true

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, -25, 0, 25)
title.Position = UDim2.new(0, 5, 0, 0)
title.BackgroundTransparency = 1
title.Text = "Walk Speed"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.TextSize = 16
title.Font = Enum.Font.SourceSansBold
title.TextXAlignment = Enum.TextXAlignment.Left

-- Minimize Button
local minimize = Instance.new("TextButton", frame)
minimize.Size = UDim2.new(0, 25, 0, 25)
minimize.Position = UDim2.new(1, -25, 0, 0)
minimize.Text = "-"
minimize.TextColor3 = Color3.fromRGB(255, 255, 255)
minimize.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
minimize.BorderSizePixel = 0
minimize.Font = Enum.Font.SourceSansBold
minimize.TextSize = 18

-- Input Box
local speedBox = Instance.new("TextBox", frame)
speedBox.Size = UDim2.new(1, -20, 0, 25)
speedBox.Position = UDim2.new(0, 10, 0, 35)
speedBox.PlaceholderText = "Speed (default 16)"
speedBox.Text = "500"
speedBox.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
speedBox.TextColor3 = Color3.fromRGB(255, 255, 255)
speedBox.BorderSizePixel = 0
speedBox.Font = Enum.Font.SourceSans
speedBox.TextSize = 16

-- Apply Button
local apply = Instance.new("TextButton", frame)
apply.Size = UDim2.new(1, -20, 0, 25)
apply.Position = UDim2.new(0, 10, 0, 65)
apply.Text = "Apply"
apply.BackgroundColor3 = Color3.fromRGB(90, 90, 90)
apply.TextColor3 = Color3.fromRGB(255, 255, 255)
apply.BorderSizePixel = 0
apply.Font = Enum.Font.SourceSansBold
apply.TextSize = 16

-- Logic
apply.MouseButton1Click:Connect(function()
	if humanoid and tonumber(speedBox.Text) then
		humanoid.WalkSpeed = tonumber(speedBox.Text)
	end
end)

-- Minimize toggle
local minimized = false
minimize.MouseButton1Click:Connect(function()
	minimized = not minimized
	for _, obj in ipairs(frame:GetChildren()) do
		if obj ~= title and obj ~= minimize then
			obj.Visible = not minimized
		end
	end
	frame.Size = minimized and UDim2.new(0, 180, 0, 25) or UDim2.new(0, 180, 0, 90)
end)
